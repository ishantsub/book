<!DOCTYPE html>
<html>
<head>
  <title>Book Reader</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>📘 Book Reader</h1>

  <% pages.forEach(page => { %>
    <div class="page">
      <h2>Page <%= page.number %></h2>
      <p><%= page.content %></p>
      <% if (isAdmin) { %>
        <a href="/edit/<%= page._id %>">✏️ Edit</a>
      <% } %>
    </div>
  <% }) %>

  <% if (isAdmin) { %>
    <form method="POST" action="/add">
      <button>Add New Page</button>
    </form>
  <% } else { %>
    <a href="/login">Admin Login</a>
  <% } %>
</body>
</html>